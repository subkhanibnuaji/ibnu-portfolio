// Prisma Schema for Ibnu Portfolio v3
// Database: PostgreSQL (Supabase/Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== AUTHENTICATION ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  chatSessions  ChatSession[]
  pageViews     PageView[]
  comments      Comment[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

// ==================== PORTFOLIO CONTENT ====================

model Profile {
  id          String   @id @default(cuid())
  name        String
  title       String
  tagline     String
  bio         String   @db.Text
  email       String
  location    String
  avatarUrl   String?
  resumeUrl   String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  socialLinks SocialLink[]

  @@map("profiles")
}

model SocialLink {
  id        String   @id @default(cuid())
  platform  String   // github, linkedin, twitter, tiktok, etc
  url       String
  username  String?
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("social_links")
}

model Project {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  description  String   @db.Text
  longDesc     String?  @db.Text
  category     String   // government, web3, enterprise, etc
  status       ProjectStatus @default(IN_PROGRESS)
  featured     Boolean  @default(false)
  imageUrl     String?
  liveUrl      String?
  githubUrl    String?
  technologies String[] // Array of tech names
  features     String[] // Array of feature descriptions
  impact       String?  @db.Text
  order        Int      @default(0)
  startDate    DateTime?
  endDate      DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("projects")
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  COMPLETED
  ON_HOLD
  ARCHIVED
}

model Skill {
  id          String   @id @default(cuid())
  name        String
  category    String   // programming, frameworks, ai-ml, blockchain, etc
  proficiency Int      @default(50) // 0-100
  icon        String?  // icon name or URL
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("skills")
}

model Experience {
  id          String    @id @default(cuid())
  company     String
  position    String
  location    String?
  type        String    // full-time, contract, freelance, founder
  description String    @db.Text
  highlights  String[]  // Array of achievement bullets
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("experiences")
}

model Education {
  id          String    @id @default(cuid())
  institution String
  degree      String
  field       String
  location    String?
  gpa         Float?
  description String?   @db.Text
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("education")
}

model Certification {
  id           String   @id @default(cuid())
  name         String
  issuer       String
  issuerLogo   String?
  category     String   // university, tech, consulting, finance, etc
  credentialId String?
  credentialUrl String?
  issueDate    DateTime
  expiryDate   DateTime?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("certifications")
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  role        String
  memberId    String?
  description String?  @db.Text
  logoUrl     String?
  websiteUrl  String?
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("organizations")
}

model Award {
  id          String   @id @default(cuid())
  title       String
  issuer      String
  description String?  @db.Text
  year        Int
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("awards")
}

// ==================== AI CHATBOT ====================

model ChatSession {
  id        String   @id @default(cuid())
visitorId String?  // For anonymous visitors
  userId    String?  // For authenticated users
  user      User?    @relation(fields: [userId], references: [id])
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages  ChatMessage[]

  @@map("chat_sessions")
}

model ChatMessage {
  id          String      @id @default(cuid())
  sessionId   String
  session     ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role        MessageRole
  content     String      @db.Text
  tokens      Int?        // Token count for billing
  model       String?     // Model used (claude-3, gpt-4, etc)
  latencyMs   Int?        // Response latency
  createdAt   DateTime    @default(now())

  @@map("chat_messages")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

// ==================== BLOG & CONTENT ====================

model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String?  @db.Text
  content     String   @db.Text // MDX content
  coverImage  String?
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  views       Int      @default(0)
  readingTime Int?     // Minutes
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categories  BlogCategory[]
  tags        BlogTag[]
  comments    Comment[]

  @@map("blog_posts")
}

model BlogCategory {
  id        String     @id @default(cuid())
  name      String     @unique
  slug      String     @unique
  posts     BlogPost[]

  @@map("blog_categories")
}

model BlogTag {
  id    String     @id @default(cuid())
  name  String     @unique
  slug  String     @unique
  posts BlogPost[]

  @@map("blog_tags")
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  postId    String
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  authorName String?  // For anonymous comments
  authorEmail String?
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")

  @@map("comments")
}

// ==================== ANALYTICS ====================

model PageView {
  id        String   @id @default(cuid())
  path      String
  referrer  String?
  userAgent String?
  ip        String?
  country   String?
  city      String?
  device    String?  // desktop, mobile, tablet
  browser   String?
  os        String?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  visitorId String?  // Anonymous visitor tracking
  sessionId String?
  duration  Int?     // Time on page in seconds
  createdAt DateTime @default(now())

  @@index([path])
  @@index([createdAt])
  @@map("page_views")
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  name      String   // click, scroll, form_submit, etc
  category  String?
  label     String?
  value     Float?
  path      String
  visitorId String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([name])
  @@index([createdAt])
  @@map("analytics_events")
}

// ==================== CONTACT & NEWSLETTER ====================

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  category  String?  // inquiry, collaboration, job, etc
  priority  Priority @default(MEDIUM)
  status    ContactStatus @default(NEW)
  ip        String?
  userAgent String?
  repliedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_submissions")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ContactStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
  SPAM
}

model NewsletterSubscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  status       SubscriberStatus @default(ACTIVE)
  source       String?  // where they subscribed from
  confirmedAt  DateTime?
  unsubscribedAt DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("newsletter_subscribers")
}

enum SubscriberStatus {
  PENDING
  ACTIVE
  UNSUBSCRIBED
}

// ==================== CRYPTO PORTFOLIO ====================

model CryptoAsset {
  id          String   @id @default(cuid())
  symbol      String   // BTC, ETH, SOL, etc
  name        String
  category    String   // btc, altcoin, memecoin, defi
  allocation  Float    // Percentage 0-100
  avgBuyPrice Float?
  quantity    Float?
  notes       String?  @db.Text
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("crypto_assets")
}

model TradingJournal {
  id          String   @id @default(cuid())
  symbol      String
  type        TradeType
  side        TradeSide
  entryPrice  Float
  exitPrice   Float?
  quantity    Float
  pnl         Float?
  pnlPercent  Float?
  fees        Float?
  exchange    String?  // binance, bybit, okx, etc
  thesis      String?  @db.Text
  lessons     String?  @db.Text
  screenshot  String?
  entryDate   DateTime
  exitDate    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("trading_journal")
}

enum TradeType {
  SPOT
  FUTURES
  OPTIONS
  MARGIN
}

enum TradeSide {
  LONG
  SHORT
}

// ==================== TESTIMONIALS ====================

model Testimonial {
  id          String   @id @default(cuid())
  name        String
  role        String
  company     String?
  content     String   @db.Text
  avatarUrl   String?
  rating      Int?     @default(5) // 1-5
  featured    Boolean  @default(false)
  approved    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("testimonials")
}

// ==================== SETTINGS ====================

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  category  String   @default("general")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

// ==================== API KEYS ====================

model ApiKey {
  id          String   @id @default(cuid())
  name        String
  key         String   @unique
  hashedKey   String
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  permissions String[] // Array of permissions
  rateLimit   Int      @default(1000) // Requests per hour
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("api_keys")
}
